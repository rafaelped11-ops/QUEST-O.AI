
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Regra simplificada e direta baseada no UID do caminho
    match /users/{userId} {
      allow read, write: if isOwner(userId);
      
      // Garante acesso recursivo a todas as subcoleções (sourceDocuments, questionnaires, questions)
      match /{allPaths=**} {
        allow read, write: if isOwner(userId);
      }
    }
  }
}
